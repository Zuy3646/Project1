<Page x:Class="Project1.View.Pages.PageCreate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project1.View.Pages"
      mc:Ignorable="d" 
      Width="375"
      Height="812">
    <Border CornerRadius="30"
            Background="#050522">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="0.4*" />
                <RowDefinition Height="0.7*" />
            </Grid.RowDefinitions>

            <Image Grid.Row="0"
                   Source="/Images/main_bg.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Opacity="0.5"/>

            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center" Margin="-6,0,0,0" Grid.RowSpan="3"
                        >
                <Border Background="#FFECAA"
                        CornerRadius="40 40 30 30"
                        Width="375"
                        Height="500">

                </Border>
            </StackPanel>
        </Grid>
    </Border>
</Page>
